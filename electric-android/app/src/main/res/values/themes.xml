<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Theme.Electric" parent="android:Theme.DeviceDefault.Light">
        <item name="android:windowBackground">@color/bg_window</item>
        <!-- Translucent action bar -->
        <item name="android:actionBarStyle">@style/ActionBar.Electric</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Translucent status bar -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Translucent navigation bar -->
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

</resources>
